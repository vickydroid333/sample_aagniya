<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".CountryAdapter">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FBFBFB"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <TextView
                android:id="@+id/alpha_two_code_title"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                android:text="alpha_two_code   :"
                android:fontFamily="@font/manrope_bold"
                android:textColor="#252222"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/alpha_two_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/alpha_two_code_title"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/country_title"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                android:text="Country                         :"
                android:fontFamily="@font/manrope_bold"
                android:textColor="#252222"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/alpha_two_code_title" />

            <TextView
                android:id="@+id/country"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                app:layout_constraintStart_toEndOf="@id/country_title"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/manrope_bold"
                app:layout_constraintTop_toBottomOf="@id/alpha_two_code" />

            <TextView
                android:id="@+id/domains_title"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                android:text="Domains                        :"
                android:fontFamily="@font/manrope_bold"
                android:textColor="#252222"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/country_title" />

            <TextView
                android:id="@+id/domains"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/domains_title"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:autoLink="web"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/manrope_bold"
                app:layout_constraintTop_toBottomOf="@id/country" />

            <TextView
                android:id="@+id/name_title"
                android:fontFamily="@font/manrope_bold"
                android:textColor="#252222"
                android:layout_width="0dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                android:text="Name                                :"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/domains_title" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/name_title"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/manrope_bold"
                app:layout_constraintTop_toBottomOf="@id/domains" />


            <TextView
                android:id="@+id/provinces_title"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                android:text="State - Provinces   :"
                android:fontFamily="@font/manrope_bold"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:textColor="#252222"
                app:layout_constraintTop_toBottomOf="@id/name_title" />

            <TextView
                android:id="@+id/province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/provinces_title"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/manrope_bold"
                app:layout_constraintTop_toBottomOf="@id/name" />

            <TextView
                android:id="@+id/web_pages_title"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                android:text="Web Pages                   :"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/manrope_bold"
                android:textColor="#252222"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/provinces_title" />

            <TextView
                android:id="@+id/web_pages"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/web_pages_title"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:layout_width="0dp"
                android:ellipsize="marquee"
                android:autoLink="web"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:fontFamily="@font/manrope_bold"
                app:layout_constraintTop_toBottomOf="@id/province" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>